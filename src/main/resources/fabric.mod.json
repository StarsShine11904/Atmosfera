    "fabricloader": "${loader_version_range}",
    "fabric": "*",
    "cloth-config": "*"
  },
  "recommends": {
    "modmenu": "*"
  },
  "suggests": {
    "presencefootsteps": "*"
  },
  "conflicts": {
    "charmonium": "*",
    "mambience": "*",
